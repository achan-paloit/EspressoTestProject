<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.espressotestproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpressoTestProject">
        <activity
            android:name="com.example.espressotestproject.LoginPageActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.espressotestproject.HomeActivity"
            android:label="@string/title_activity_home">
        </activity>
        <activity
            android:name="com.example.espressotestproject.RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>